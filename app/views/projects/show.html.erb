<h1> <%= @project.title %> </h1>

<p> <%= @project.description %>  </p>

<ul> <% @project.measurements.each do |measurement| %>
  <li> <%= measurement["name"] %>: <%= measurement["dimension"] %> </li>
<% end %>
</ul>

<!-- Delete project button only for the user who created the project -->
<%= link_to "Delete this project", project_path, method: :delete, data: {confirm: "Are you sure you want to delete this project?"} unless current_user != @project.user%>
<%= link_to "Make a proposal for this project", new_project_proposal_path(@project) unless current_user.typehelper != true %>

<!-- conditional button for link to proposal -->

<% if current_user.typehelper %>

render "new"

<% end %>



