<div class="container">
  <% if params[:type] == "helper" || resource.typehelper %>
    <h1>Helper Sign up</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :typehelper, as: :hidden, input_html: {value: true} %>
        <%= f.input :firstname, label: "First name", placeholder: 'Joe', autofocus: true %>
        <%= f.input :lastname, label: "Last name", placeholder: 'Smith' %>
        <%= f.input :photo, as: :file %>
        <%= f.input :email,
                    placeholder: 'Joe.Smith@email.com',
                    required: true,
                    input_html: { autocomplete: "off" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "off" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "off" } %>
        <%= f.input :experience, placeholder: 'Number of years'%>
        <%= f.input :profession %>
        <%= f.input :certification %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  <% else %>
    <h1>User Sign up</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :typehelper, as: :hidden, input_html: {value: false} %>
        <%= f.input :firstname, label: "First name", placeholder: 'Joe', autofocus: true %>
        <%= f.input :lastname, label: "Last name", placeholder: 'Smith' %>
        <%= f.input :photo, as: :file %>
        <%= f.input :email,
                    required: true,
                    placeholder: 'Joe.Smith@email.com',
                    input_html: { autocomplete: "off" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "off" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "off" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
