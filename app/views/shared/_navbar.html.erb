<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
      <h2 class="navbar-h">Helper<i class="fas fa-wrench"></i></h2>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <a href=""><i class="far fa-bell nav-link", id='nav-a'></i></a>
        </li>
        <li class="nav-item">
          <a href=""><i class="far fa-envelope nav-link", id="nav-a"></i></a>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? == false %>
            <%= cl_image_tag "https://res.cloudinary.com/renaudaf/image/upload/v1605724952/logo_ijlnmg.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.typehelper %>
              <%= link_to "Find a project", "/projects", class: "dropdown-item" %>
              <%= link_to "See all Helpers", users_path(current_user), class: "dropdown-item" %>
              <%= link_to "My Dashboard", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <%= link_to "Create a project", "/projects/new", class: "dropdown-item" %>
          <%= link_to "See all Helpers", users_path(current_user), class: "dropdown-item" %>
          <%= link_to "My Dashboard", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% end %>
  <% else %>
    <li class="nav-item d-flex">
      <%= link_to "Login", new_user_session_path, class: "nav-link", id:"nav-a" %>
    </li>
  <% end %>
</ul>
</div>
</div>
