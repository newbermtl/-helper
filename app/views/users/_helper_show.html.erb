<div class="container">
  <% if current_user == @user%>
    <h1 class="my-4">Current Projects</h1>
    <div class="dash">
      <% if @projects.empty? %>
          <div class="e-project-card">
            <div class="project-title">
            </div>
            <div class="i-project-card">
              <h3 class='a mt-3'>You don't have any project yet?</h3>
              <h6 class="b mt-3">Take a look at the projects <br> <i class="fas fa-search mt-2"></i></h6>
              <h6 class="c mt-3">Find the one! <br> <i class="far fa-hand-point-up mt-2"></i></h6>
              <h6 class="d mt-3">Make a proposal <br> <i class="fas fa-pencil-alt mt-2"></i></h6>
              <h6 class="e mt-3">Make a first contact <br> <i class="far fa-address-book mt-2"></i></i></h6>
              <h6 class="g mt-3">Start the project! <br> <i class="far fa-check-square mt-2"></i></h6>
            </div>
          </div>
      <% else %>
        <div class="project-content">
          <% @projects.each do |project| %>
            <%= link_to project_path(project) do %>
              <div class="project-img mb-4">
                <% if project.photos.first %>
                  <%= cl_image_tag project.photos.first.key, class: "imgs-show" %>
                <% else %>
                  <img class="imgs-show" src="https://www.homerenodirect.com/communities/homecon2015/assets/htmltextboxuserimages/kitchen-renovation-feature.jpg?ver2" alt="">
                <% end %>
                <div class="img-content">
                  <h2><%= project.title %></h2>
                  <p><%= project.description %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <div class="right-content text-center">
        <% if @user == current_user %>
          <div class="messages p-3">
            <h2>Your proposals</h2>
            <% if @user.proposals.empty? %>
              <p> You haven't made any proposals yet</p>
            <% else %>
              <% @user.proposals.each do |proposal| %>
                <div class="card-product text-left">
                  <% if current_user.photo.attached? == false %>
                    <%= cl_image_tag "https://res.cloudinary.com/renaudaf/image/upload/v1605724952/logo_ijlnmg.jpg", class: "imgs-show" %>
                  <% else %>
                    <%= cl_image_tag current_user.photo.key, class: "imgs-show" %>
                  <% end %>
                  <div class="card-product-infos">
                    <p><%= link_to "#{proposal.project.title}", proposal_path(proposal)%></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <%= link_to projects_path do %>
          <div class="create-new btn btn-light text-center px-4">
            <img src="https://image.flaticon.com/icons/svg/57/57064.svg" class="my-2" alt="">
            <h3>See all projects</h3>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <h1 class="mt-4"><%= @user.firstname  %> <%= @user.lastname  %> </h1>
    <div class="helper-card">
      <div class="helper-img">
        <% if @user.photo.attached? == false %>
          <%= cl_image_tag "https://res.cloudinary.com/renaudaf/image/upload/v1605724952/logo_ijlnmg.jpg", width: 300, height: 300, class:"card-img" %>
        <% else %>
          <%= cl_image_tag @user.photo.key, width: 300, height: 300, class: "card-img" %>
        <% end %>
      </div>
      <div class="help-description mt-4">
        <h5><strong>Profession:</strong> <%= @user.profession %></h5>
        <br>
        <h5><strong>Certification:</strong> <%= @user.certification %></h5>
        <br>
        <h5><strong>Experience:</strong> <%= @user.experience %> years</h5>
        <br>
      </div>
    </div>
  <% end %>
  <div class="container">
    <h2 class="mt-4">Reviews</h2>
    <% if @user.helper_reviews.empty? %>
      <li class="list-group-item mb-4" id="reviews-box">
        <p>There is no review at the moment</p>
      </li>
    <% else %>
      <% @user.helper_reviews.each do |review| %>
        <div class="review-container mb-4">
          <li class="list-group-item" id="reviews-box">
            <small>
              <% count = 0 %>
              <% 5.times do %>
                <% if review.rating > count %>
                  <i class="fas fa-star"></i>
                <% else %>
                  <i class="far fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <p><%= review.content %></p>
            <div class="review-links d-flex">
              <p> <small> <em>Reviewed by: <%= review.reviewer.firstname %> </em> </small> </p>
              <% if policy(review).update? %>
                <%= link_to edit_review_path(review) do %>
                  <span class="far fa-edit mx-2"></span>
                <% end %>
              <% end %>
              <% if policy(review).destroy? %>
                <%= link_to review_path(review), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <span class="far fa-trash-alt"></span>
                <% end %>
              <% end %>
            </div>
          </li>
        </div>
      <% end %>
    <% end %>
    <% if current_user != @user %>
      <div id="review-form">
        <h2 class='mt-4'>Add a new review</h2>
        <%= simple_form_for [@user, Review.new] do |f| %>
          <%= f.input :rating, type: 'select', collection: [0, 1, 2, 3, 4, 5] %>
          <%= f.input :content %>
          <%= f.submit "Submit", class: "btn btn-primary", id: "show-btn" %>
        <% end %>
      </div>
      <button type="button" onclick="document.getElementById('review-form').style.display='block'; this.style.visibility='hidden';", class="btn btn-primary my-2">Add a review</button>
    <% end %>
  </div>
</div>
