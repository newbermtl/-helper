<div class="container">
  <h1 class="my-4">Current Projects</h1>
  <div class="dash">
    <% if @project == [] %>
      <div class="project-img">
        <img class="imgs" src="https://www.homerenodirect.com/communities/homecon2015/assets/htmltextboxuserimages/kitchen-renovation-feature.jpg?ver2" alt="">
        <div class="img-content">
          <h2>Create new project</h2>
        </div>
      </div>
    <% else %>
      <div class="project-content">
        <% @project.each do |project| %>
          <%= link_to project_path(project) do %>
            <div class="project-img mb-4">
              <% if project.photos.first %>
                <%= cl_image_tag project.photos.first.key, class: "imgs" %>
              <% else %>
                <img class="imgs" src="https://www.homerenodirect.com/communities/homecon2015/assets/htmltextboxuserimages/kitchen-renovation-feature.jpg?ver2" alt="">
              <% end %>
              <div class="img-content">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <div class="right-content text-center">
      <div class="messages p-3">
        <h2>Your messages</h2>
        <% @user.messages.each do |message| %>
          <div class="card-product text-left">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="card-product-infos">
              <h2><%= message.proposal.user.firstname %></h2>
              <p><%= message.proposal.pitch.first(25) %>...</p>
            </div>
          </div>
        <% end %>
        <%= link_to  "Access your message", project_proposal_messages_path(@project, @proposal) %>
      </div>
      <%= link_to projects_path do %>
        <div class="create-new btn btn-light text-center px-4">
          <img src="https://image.flaticon.com/icons/svg/57/57064.svg" class="my-2" alt="">
          <h3>See all projects</h3>
        </div>
      <% end %>
    </div>
  </div>
  <h2 class="mt-4">Reviews</h2>
  <% if @user.helper_reviews.empty? %>
    <li class="list-group-item mb-4">
      <p>There is no review at the moment</p>
    </li> 
  <% else %>
    <% @user.helper_reviews.each do |review| %>
    <div class="review-container">
      <li class="list-group-item">
        <small>
          <% count = 0 %>
          <% 5.times do %>
            <% if review.rating > count %>
              <i class="fas fa-star"></i>
            <% else %>
              <i class="far fa-star"></i>
            <% end %>
            <% count += 1 %>
          <% end %>
        </small>
        <p><%= review.content %></p>
        <p> <small> <em>Reviewed by: <%= review.reviewer.firstname %> </em> </small> </p>
        <% if policy(review).destroy? %>
          <%= link_to "Remove", review_path(review),  class: "btn btn-primary",
                                                      method: :delete,
                                                      data: { confirm: "Are you sure?" } %>
        <% end %>
        <% if policy(review).update? %>
          <%= link_to  "Edit", edit_review_path(review), class: "btn btn-primary" %>
        <% end %>
      </li>
        

      </div>
    <% end %>
  <% end %>
  <% if current_user != @user %>
    <h2 class='mt-4'>Add a new review</h2>
    <%= simple_form_for [@user, Review.new]  do |f| %>
      <%= f.input :rating, type: 'select', collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.input :content %>
      <%= f.submit "Submit", class: "btn btn-primary", id: "show-btn" %>
    <% end %>
  <% end %>
</div>
